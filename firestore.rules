rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all collections for public site
    match /{document=**} {
      allow read: if true;
    }
    
    // TEMPORARY: Allow write access to any authenticated user for setup
    // TODO: Restrict to specific admin emails after creating admin users
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
